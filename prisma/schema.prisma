generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String?
  lastName  String?
  password  String   
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
}

model Account {
  id          String          @id @default(uuid())
  accountNumber String        @unique
  userId      Int
  type        AccountType
  balance     Float        @default(0.0)
  status      AccountStatus @default(ACTIVE)
  overdraftLimit Float        @default(0.0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user        User         @relation(fields: [userId], references: [id])

  outgoingTransactions Transaction[] @relation("outgoingTransactions")
  incomingTransactions Transaction[] @relation("incomingTransactions")

}

model Transaction {
  id              String          @id @default(uuid())
  sourceAccountId       String?
  type            TransactionType
  amount          Float
  status          TransactionStatus @default(PENDING)
  createdAt     DateTime        @default(now())
  description     String?

  sourceAccount         Account?        @relation("outgoingTransactions", fields: [sourceAccountId], references: [id])

  destinationAccountId String?
  destinationAccount   Account?       @relation("incomingTransactions", fields: [destinationAccountId], references: [id])  
}

enum AccountType {
  CHECKING
  SAVINGS
}

enum AccountStatus {
  ACTIVE
  FROZEN
  CLOSED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}