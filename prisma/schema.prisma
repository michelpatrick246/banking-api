generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String?
  lastName  String?
  password  String   
  isActive  Boolean  @default(true)

  twoFactorEnabled Boolean @default(false)
  backupCodes    String[] //Code de récupération

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
  otpCodes  OtpCode[]
  role      Role           @default(USER)
}

model OtpCode {
  id         String   @id @default(cuid())
  userId     Int  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code       String   // Code à 6 chiffres
  type       OtpType  // LOGIN, TRANSACTION, PASSWORD_RESET
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([code])
}

enum OtpType {
  LOGIN
  TRANSACTION
  PASSWORD_RESET
}

model Account {
  id          String          @id @default(uuid())
  accountNumber String        @unique
  userId      Int
  type        AccountType
  balance     Float        @default(0.0)
  status      AccountStatus @default(ACTIVE)
  overdraftLimit Float        @default(0.0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user        User         @relation(fields: [userId], references: [id])

  outgoingTransactions Transaction[] @relation("outgoingTransactions")
  incomingTransactions Transaction[] @relation("incomingTransactions")

  dailyWithdrawalLimit Decimal      @default(500) @db.Decimal(15, 2)
  dailyTransferLimit Decimal      @default(5000.0) @db.Decimal(15, 2)
  monthlyTransferLimit Decimal     @default(20000.0) @db.Decimal(15, 2)
  maxTransactionsPerDay Int         @default(50)

  @@index([userId, accountNumber])

}

model Transaction {
  id              String          @id @default(uuid())
  sourceAccountId       String?
  type            TransactionType
  amount          Float
  status          TransactionStatus @default(PENDING)
  createdAt     DateTime        @default(now())
  description     String?

  sourceAccount         Account?        @relation("outgoingTransactions", fields: [sourceAccountId], references: [id])

  destinationAccountId String?
  destinationAccount   Account?       @relation("incomingTransactions", fields: [destinationAccountId], references: [id])  
}

model AuditLog {
  id        String     @id @default(uuid())
  userId    Int?
  action    AuditAction
  details  Json?
  ipAddress String?
  entity    String?
  entityId  String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId, action, createdAt])
  @@map("audit_logs")
}

enum AuditAction {
  LOGIN
  LOGOUT
  CREATE_ACCOUNT
  DEPOSIT
  TRANSFER
  WITHDRAW
  UPDATE_ACCOUNT
  DELETE_ACCOUNT
  FAILED_TRANSACTION
  CREATE_TRANSACTION
}

enum AccountType {
  CHECKING
  SAVINGS
}

enum AccountStatus {
  ACTIVE
  FROZEN
  CLOSED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}